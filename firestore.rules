rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Helper function to get user's pairId
    function getUserPairId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.pairId;
    }
    
    // Helper function to check if user is part of a pair
    function isPairMember(pairId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/pairs/$(pairId)).data.participants;
    }
    
    // Helper to check if update is only setting pairId and updatedAt
    function isSettingPairIdOnly() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pairId', 'updatedAt']);
    }
    
    // Helper to check if requester is paired with this user
    function isPairPartner(uid) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(uid)) &&
             get(/databases/$(database)/documents/users/$(uid)).data.pairId != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.pairId == 
             get(/databases/$(database)/documents/users/$(uid)).data.pairId;
    }
    
    // Users collection
    match /users/{uid} {
      function isSelf() {
        return isAuthenticated() && request.auth.uid == uid;
      }
      
      // Read own profile
      allow read: if isSelf();
      
      // Read partner's profile if paired
      allow read: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.pairId != null &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.pairId == 
                     resource.data.pairId;
      
      // Create own profile
      allow create: if isAuthenticated() && request.auth.uid == uid;
      
      // Update own profile
      allow update: if isSelf();
      
      // Allow setting pairId when pairing (string) or unpairing (null)
      allow update: if isAuthenticated() && 
                       isSettingPairIdOnly() &&
                       (
                         // Pairing: setting to a string
                         (request.resource.data.pairId is string) ||
                         // Unpairing: setting to null, and requester is a pair member
                         (request.resource.data.pairId == null && isPairPartner(uid))
                       );
      
      // Allow setting showOnboardingAfterUnpair during unpair
      // This allows both users to be updated when one initiates unpair
      allow update: if isAuthenticated() && 
                       isPairPartner(uid) &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['pairId', 'showOnboardingAfterUnpair', 'updatedAt']);

      // Device tokens for push
      match /devices/{deviceId} {
        // Only the signed-in owner can read/write their device records
        allow read, write: if isOwner(uid);
      }

      // Optional: client-stored scheduled local notifications (Phase 3)
      match /scheduledNotifications/{notifId} {
        // Only the signed-in owner can read/write their scheduled notifs
        allow read, write: if isOwner(uid);
      }
    }
    
    // Pair codes collection
    match /pairCodes/{code} {
      // Anyone authenticated can read codes (to redeem them)
      allow read: if isAuthenticated();
      allow write: if false;
      
      // Only the owner can create their own code
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerUid == request.auth.uid &&
                       request.resource.data.expiresAt is timestamp &&
                       request.resource.data.expiresAt > request.time;
      
      // Allow updates when redeeming (marking as used)
      allow update: if isAuthenticated() && 
                       request.resource.data.used == true &&
                       request.resource.data.pairId is string;
      
      // Only the owner can delete their own code
      allow delete: if isAuthenticated() && resource.data.ownerUid == request.auth.uid;
    }
    
    // Pairs collection
    match /pairs/{pairId} {
      // Pair members can read their pair
      allow read: if isAuthenticated() && 
                     request.auth.uid in resource.data.participants;
      
      // Anyone authenticated can create a pair (during pairing)
      allow create: if isAuthenticated() && 
                       request.auth.uid in request.resource.data.participants &&
                       request.resource.data.participants.size() == 2;
      
      // Pair members can update their pair
      allow update: if isAuthenticated() && 
                       request.auth.uid in resource.data.participants;
      
      // Pair members can delete their pair (unpair)
      allow delete: if isAuthenticated() && 
                       request.auth.uid in resource.data.participants;
    }
    
    // Todos collection
    match /todos/{todoId} {
      // Pair members can read todos
      allow read: if isAuthenticated() && 
                     isPairMember(resource.data.pairId);
      
      // Pair members can create todos
      allow create: if isAuthenticated() && 
                       isPairMember(request.resource.data.pairId) &&
                       request.resource.data.createdBy == request.auth.uid;
      
      // Pair members can update todos
      allow update: if isAuthenticated() && 
                       isPairMember(resource.data.pairId);
      
      // Pair members can delete todos
      allow delete: if isAuthenticated() && 
                       isPairMember(resource.data.pairId);
    }
    
    // Favorites collection
    match /favorites/{favoriteId} {
      // Pair members can read favorites
      allow read: if isAuthenticated() && 
                     isPairMember(resource.data.pairId);
      
      // Pair members can create favorites
      allow create: if isAuthenticated() && 
                       isPairMember(request.resource.data.pairId) &&
                       request.resource.data.createdBy == request.auth.uid;
      
      // Pair members can update favorites
      allow update: if isAuthenticated() && 
                       isPairMember(resource.data.pairId);
      
      // Pair members can delete favorites
      allow delete: if isAuthenticated() && 
                       isPairMember(resource.data.pairId);
    }
    
    // Stickers collection
    match /stickers/{stickerId} {
      // Pair members can read stickers
      allow read: if isAuthenticated() && 
                     isPairMember(resource.data.pairId);
      
      // Pair members can create stickers
      allow create: if isAuthenticated() && 
                       isPairMember(request.resource.data.pairId) &&
                       request.resource.data.createdBy == request.auth.uid &&
                       request.resource.data.name is string &&
                       request.resource.data.imageUrl is string;
      
      // Pair members can update stickers (name only)
      allow update: if isAuthenticated() && 
                       isPairMember(resource.data.pairId) &&
                       request.resource.data.pairId == resource.data.pairId &&
                       request.resource.data.createdBy == resource.data.createdBy &&
                       request.resource.data.imageUrl == resource.data.imageUrl;
      
      // Pair members can delete stickers
      allow delete: if isAuthenticated() && 
                       isPairMember(resource.data.pairId);
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Recipient can read their notifications
      allow read: if isAuthenticated() && 
                     resource.data.recipientUid == request.auth.uid;
      allow write: if false;
      
      // Pair members can create notifications for each other
      allow create: if isAuthenticated() && 
                       request.resource.data.senderUid == request.auth.uid &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.pairId != null;
      
      // Recipient can update their notifications (mark as read)
      allow update: if isAuthenticated() && 
                       resource.data.recipientUid == request.auth.uid;
      
      // Recipient can delete their notifications
      allow delete: if isAuthenticated() && 
                       resource.data.recipientUid == request.auth.uid;
    }
  }
}